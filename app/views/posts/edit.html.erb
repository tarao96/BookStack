<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/posts/#{@post.id}/update") do %>
    <div class="form">
      <div class="form-body">
        <p>タイトル</p>
         <input name="content" value="<%= @post.content %>"><br>
        <p>一言要約</p>
         <textarea class="summary" name="content2"><%= @post.content2 %></textarea>
         
         <p>Point1</p>
         <textarea name="content3"><%= @post.content3 %></textarea>
         
         <p>Point2</p>
         <textarea name="content4"><%= @post.content4 %></textarea>
         
         <p>Point3</p>
         <textarea name="content5"><%= @post.content5 %></textarea>
         
         <p>レビュー</p>
         <textarea name="review"><%= @post.review %></textarea>
           
        <input type="submit" value="保存">
      </div>
    </div>
    <% end %>
  </div>
</div>
