<div class="main users-index">
  <div class="container">
    <h1 class="users-heading">ユーザー一覧</h1>
    <% @users.each do |user| %>
     <div class="users-index-item">
       <div class="user-left">
         <% if user.image_name? %>
          <%= image_tag user.image_name.url %>
         <% else %>
          <%= image_tag "/user_images/default_user.jpg", class: 'user_sized' %>
         <% end %>
       </div>
       <div class="user-right">
         <%= link_to(user.name, "/users/#{user.id}") %>
       </div>
       <!-- フォロー機能 -->
       <% if @current_user != user %>
       <% if user.followed_by?(@current_user) %>
         <p><%= link_to "フォロー済み", user_relationship_path(user_id: user, id: user), method: :delete %></p>
       <% else %>
         <p><%= link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
       <% end %>
       <% end %>
       <!-- ここまで -->
     </div>
    <% end %>
  </div>
</div>